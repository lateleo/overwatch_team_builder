<h1>Edit Email/Username</h1>

<%= form_for @user do |f| %>
  <% if f.object.errors.any? %>
    <div class="errors" id="errors">
      <% if f.object.errors.any? %>
        <ul>
          <% f.object.errors.full_messages.each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="input-field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div><br>
  <div class="input-field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div><br>
  <div>
    <%= f.submit, nil, class: "btn btn-default btn-xs" %>
  </div>

<% end %>
