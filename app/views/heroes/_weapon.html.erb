<h3><%= image_tag weapon.icon_path, width: "60"%> Weapon: <%= weapon.name %></h3>
<ul>
  <li><b>Ammo:</b> <%= weapon.ammo ? weapon.ammo : "âˆž" %></li>
  <li><b>Fire-Rate:</b> <%= weapon.fire_rate %></li>
</ul>

<p><%= weapon.effect %></p>

<% if weapon.alt_name %>
  <% if weapon.alt_icon_path %>
    <h4><%= image_tag weapon.alt_icon_path, width: "60" %> Alt-fire: <%= weapon.alt_name %></h4>
  <% else %>
    <h4>Alt-fire: <%= weapon.alt_name %></h4>
  <% end %>

  <ul>
    <li><b>Fire-Rate:</b> <%= weapon.alt_fire_rate %></li>
  </ul>

  <p><%= weapon.alt_effect %></p>
<% end %>
