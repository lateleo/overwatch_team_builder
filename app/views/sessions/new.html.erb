<h1>Login</h1>
<%= form_tag sessions_path do |f| %>
  <div class="input-field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div><br>
  <div class="input-field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div><br>
  <div>
    <%= submit_tag nil, class: "btn btn-default"%>
  </div>
<% end %>

<h2>Forgot Password?</h2>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div><br>
  <div>
    <%= submit_tag "Reset my password!", class: "btn btn-default" %>
  </div>
<% end %>
